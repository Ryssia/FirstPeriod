<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextArea?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0"
    xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ifpr.pgua.eic.projetointegrador.controllers.TelaCiclo">
    
    <children>
        <Label alignment="CENTER" text="Adicionar novo Ciclo Menstrual" textAlignment="CENTER" wrapText="false">
            <font>
                <Font size="18.0" />
            </font>
        </Label>        
        <DatePicker fx:id="dpDataIni" layoutX="195.0" layoutY="158.0" prefHeight="18.0" prefWidth="168.0" promptText="Data de início" />
        <DatePicker fx:id="dpDataTerm" layoutX="195.0" layoutY="158.0" prefHeight="18.0" prefWidth="168.0" promptText="Data de término" />     
        <TextField fx:id="tfFluxo" promptText="Tipo de fluxo. Ex: médio, intenso." />
        <TextArea fx:id="taComentarios" promptText="Comentários sobre seu ciclo" />    
        <Button onAction="#onActionSalvar" text="Salvar" />                                                                                                                           
    </children>

</VBox>