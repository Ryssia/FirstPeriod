<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0"
    xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ifpr.pgua.eic.projetointegrador.controllers.TelaListCiclo">

    <children>
        <HBox alignment="CENTER">
            <Label alignment="CENTER" text="Ciclos Menstruais" textAlignment="CENTER" wrapText="false">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#onActionAdd" text="Adicionar novo ciclo"/>
        </HBox>
        <HBox alignment="CENTER" >
            <ListView fx:id="lvCiclos" prefWidth="500.0">
            </ListView>
        </HBox>
        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#onActionEditar" text="Editar"/>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <Button onAction="#onActionExcluir" text="Excluir"/>
        </HBox>


    </children>


</VBox>